{% extends 'admin/base.html.twig' %}

{% form_theme form _self %}

{% block _job_logo_widget %}
    {% if form.vars.data %}
        <img class="madia-object" style=" height: 100px;" src="{{ asset(jobs_web_directory ~ '/' ~ form.vars.data.filename) }}" alt="Logo">
    {% endif %}
    {{ form_widget(form) }}
{% endblock %}

{% block body %}

    <h1>Edit Job</h1>

    {% include 'admin/job/_form.html.twig' with {'form':form} only%}

    <a class="btn btn-default" href="{{ path('admin.job.list') }}">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        Return to list
    </a>

{% endblock %}